{
  "name": "vndb-backend",
  "version": "1.0.0",
  "description": "Backend for the VNDB client.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node .",
    "dev": "NODE_ENV=development node .",
    "watch": "tsc-watch --onSuccess \"npm run dev\"",
    "build": "rm -rf dist && tsc",
    "docs": "typedoc",
    "test": "NODE_ENV=testing jest",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PragunSaini/vndb-backend.git"
  },
  "keywords": [
    "vndb",
    "api"
  ],
  "author": "Pragun Saini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PragunSaini/vndb-backend/issues"
  },
  "homepage": "https://github.com/PragunSaini/vndb-backend#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^7.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.7",
    "@types/pg": "^7.14.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "tsc-watch": "^4.2.3",
    "typedoc": "^0.16.11",
    "typescript": "^3.8.3"
  }
}
